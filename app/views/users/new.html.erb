<div class = "container-fluid">
 <div class="row">
 <h4>プロフィール</h4>
<%= form_for @user do |f| %>
  <div class="col-sm-6">ニックネーム</div>
  <div class="form-for input-sm" style="padding: 3px;">
 <%= f.text_field :nickname, class: "form-conrol" %>
  </div>
  </div>
      <div class="col-sm-6">住所</div>
    <div class="form-for input-sm" style="padding: 3px;">
    都道府県
