<div class="container-fluid">
<h2>メッセージルーム<h2>
 <ul class="thumbnails thumbnail--movies row grid4 js-lazy-load-images js-my-check-stats" id="list-module">
   <% @messages.each do |message| %>
<span class="label label-warning"><%= message.sender %>"さんと<%= message.receiver %>さんのページ</span>
<% end %>

<%= form_for @message do |f| %>
  <div class="col-sm-2">メッセージを送る</div>
  <div class="form-for input-sm" style="padding: 3px;">
 <%= f.text_area :message, class: "form-conrol" %>
  </div>
  </div>
        <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
</div>

