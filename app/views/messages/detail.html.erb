<div class="container-fluid">
<h2><%= current_user.nickname %>さんと<%= @user.nickname %>さんのメッセージルーム<h2>
 <ul class="thumbnails thumbnail--movies row grid4 js-lazy-load-images js-my-check-stats" id="list-module">
   <% @messages.each do |message| %>
    <li>
      <%= message.user.nickname %>さん
      <%= message.body %>
    </li>
    <% end %>
  </ul>

<%= form_for [@user,@message] do |f| %>
  <div class="col-sm-6">メッセージを送る</div>
  <div class="form-for input-sm" style="padding: 3px;">
 <%= f.text_area :body, class: "form-conrol" %>
  </div>
  </div>
        <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
</div>

